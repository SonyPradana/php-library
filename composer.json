{
    "name": "sonypradana/php-library",
    "description": "library to build php mvc",
    "keywords": ["framework", "php-mvc", "php-library"],
    "license": "MIT",
    "authors": [
        {
            "name": "Angger Pradana",
            "email": "sonypradana@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-mbstring": "*",
        "php-di/php-di": "^6.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.5",
        "friendsofphp/php-cs-fixer": "^3.8",
        "phpstan/phpstan": "^1.7"
    },
    "autoload": {
        "psr-4": {
            "System\\": "src/System/"
        },
        "files": [
          "src/System/Collection/helper.php",
          "src/System/Integrate/helper.php",
          "src/System/Text/helper.php",
          "src/System/Time/helper.php"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "lint": "php-cs-fixer fix -v",
        "test:lint": "php-cs-fixer fix -v --dry-run",
        "test:types": "phpstan analyse --ansi --memory-limit=-1 --debug",
        "test:unit": "phpunit",
        "test": [
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    }
}
